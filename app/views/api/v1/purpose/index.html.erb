<p id="notice"><%= notice %></p>

<h1>Purposes</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purposes.each do |i| %>
      <tr>
        <% #new -> create -> index -> index.html.erb %>
        <td><%= link_to i[:title], api_v1_purpose_path(i[:id]) %></td>
        <td><%= i[:term] %></td>
        <td><%= i[:time] %></td>
        <td><%= link_to 'Edit', edit_api_v1_purpose_path(i[:id]) %></td>
        <td><%= link_to 'Destroy', api_v1_purpose_path(i[:id]), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

